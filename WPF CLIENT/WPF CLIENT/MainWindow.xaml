<Window x:Class="WPF_CLIENT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_CLIENT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="45" VerticalAlignment="Top">
            <ComboBox Width="200" Height="40" Margin="10,3,0,0" Name="CBtest" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Button Height="40" Width="150" Margin="10,0,0,0" FontSize="15" Click="ShowWeather">Посмотреть погоду</Button>
            <Button Height="40" Width="150" Margin="10,0,0,0" FontSize="15" Click="Refresh" ToolTip="Что бы обновить список городов очистите меню выбора города и нажмите Обновить">Обновить</Button>
        </StackPanel>
    </Grid>
</Window>
